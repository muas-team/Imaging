<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <SurfaceView
        android:id="@+id/surfaceView1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/roomSearchText"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp" />

    <ImageView
        android:id="@+id/imageLastProcessed"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/roomSearchText"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textLastCommandReceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/surfaceView1"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_alignTop="@+id/textLastCommandSent"
        android:layout_toLeftOf="@+id/surfaceView1"
        android:gravity="center_horizontal"
        android:text="N/A" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonToggleBTComms"
        android:layout_alignBottom="@+id/buttonToggleBTComms"
        android:layout_toRightOf="@+id/buttonToggleBTComms"
        android:text="Enable BT Communication" />

    <ToggleButton
        android:id="@+id/buttonToggleBTComms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="ToggleButton" />

    <Button
        android:id="@+id/buttonSimCamRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:height="10dp"
        android:text="Simulate Camera Request"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roomSearchText"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/imageLastProcessed"
        android:gravity="center_horizontal"
        android:text="Last Command Sent"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textLastCommandSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:gravity="center_horizontal"
        android:text="N/A" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textLastCommandSent"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/surfaceView1"
        android:gravity="center_horizontal"
        android:text="Last Command Rec&apos;d"
        android:textSize="10sp" />

    <EditText
        android:id="@+id/roomSearchText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/buttonToggleBTComms"
        android:ems="10"
        android:hint="Search for..."
        android:inputType="number" />

    <TextView
        android:id="@+id/lastStringRead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageLastProcessed"
        android:layout_alignLeft="@+id/textLastCommandSent"
        android:layout_alignRight="@+id/textLastCommandSent"
        android:layout_below="@+id/textLastCommandSent"
        android:gravity="center_horizontal"
        android:text="" />

</RelativeLayout>
